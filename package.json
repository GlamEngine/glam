{
  "name": "glam",
  "version": "0.0.4",
  "description": "Experimental WebGL Engine",
  "main": "lib-es5/index.js",
  "directories": {
    "example": "examples"
  },
  "jsnext:main": "lib/index.js",
  "scripts": {
    "example:hello-world": "budo ./examples/hello-world/hello-world.js -- -t [ babelify --presets [ es2015 ] ] -t brfs",
    "build:es5": "cp -rf ./lib/. ./lib-es5 && babel --presets es2015 -d lib-es5 lib",
    "build:tests": "babel --presets es2015 -d tests-es5 tests && replace '\\.\\./lib/' '../lib-es5/' ./tests-es5 -r",
    "build": "npm run build:es5 && npm run build:tests",
    "test": "npm run build && browserify tests-es5/*.js | tape-run | tap-spec",
    "test:browser": "budo tests/index.js -- -t [ babelify --presets [ es2015 ] ]",
    "test:headless": "hihat tests/index.js -- -t [ babelify --presets [ es2015 ] ]",
    "prepublish": "npm run build"
  },
  "author": "Greg Tatum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glamjs/glam.git"
  },
  "browserify": {
    "transform": [
      "brfs"
    ]
  },
  "bugs": {
    "url": "https://github.com/glamjs/glam/issues"
  },
  "homepage": "https://github.com/glamjs/glam#readme",
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "electron-prebuilt": "^0.35.2",
    "geo-3d-box": "^1.0.4",
    "hihat": "^2.5.0",
    "replace": "^0.3.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "tape-run": "^2.1.0"
  },
  "dependencies": {
    "brfs": "^1.4.1",
    "canvas-fit": "^1.5.0",
    "gl-geometry": "^1.2.0",
    "gl-mat2": "^1.0.0",
    "gl-mat3": "^1.0.0",
    "gl-mat4": "^1.1.4",
    "gl-quat": "^1.0.0",
    "gl-shader": "^4.0.6",
    "gl-vec2": "^1.0.0",
    "gl-vec3": "^1.0.3",
    "object-assign": "^4.0.1",
    "poem-loop": "^1.1.1",
    "webgl-context": "^2.2.0"
  }
}
